
#include<stdio.h>
#include<windows.h>
#include<assert.h>
#include<stdlib.h>
#pragma warning (disable:4996)




struct 
{
	char name[64];
	char sex;
	char age;
	int tel;
	char address[64];
}message[1000] = {0};

void menu()
{
	printf("*************************************************************\n");
	printf("*************************************************************\n");
	printf("*******************  1. 添加联系人信息       ****************\n");
	printf("*******************  2. 删除指定联系人信息   ****************\n");
	printf("*******************  3. 查找指定联系人信息   ****************\n");
	printf("*******************  4. 修改指定联系人信息   ****************\n");
	printf("*******************  5. 显示所有联系人信息   ****************\n");
	printf("*******************  6. 清空所有联系人       ****************\n");
	printf("*******************  7. 以名字排序所有联系人 ****************\n");
	printf("*******************  0. 退出                 ****************\n");
	printf("*************************************************************\n");
	printf("*************************************************************\n");
}

void addMessage()
{
	printf("Please input the numbers of addMessage : ");
	int num = 0;
	scanf("%d", &num);
	int i = 0;
	for (i = 0; i < num; i++)
	{
		printf("name\tsex\tage\ttel\taddress\n");
		scanf("%s %c %d %d %s", &message[i].name, &message[i].sex, \
			&message[i].age, &message[i].tel, &message[i].address);
	}
}

void deleteMessage()
{

}

void findMessage()
{

}

void changeMessage()
{

}

void desplayMessage()
{
	int i = 0;
	printf("name\tsex\tage\ttel\taddress\n");
	for (i = 0; i < 1000;i++)
	{
		printf("%s\t%c\t%d\t%d\t%s\n", message[i].name, message[i].sex, \
			message[i].age, message[i].tel, message[i].address);
	}
}

void clearMessage()
{

}

void nameSort()
{

}



int main()
{
	int input = 0;
	while (1)
	{
		menu();
		printf("Please choose <0—7> : ");
		scanf("%d", &input);
		switch (input)
		{
		case 0:
			exit(0);
			break;
		case 1:
			addMessage();
			break;
		case 2:
			deleteMessage();
			break;
		case 3:
			findMessage();
			break;
		case 4:
			changeMessage();
			break;
		case 5:
			desplayMessage();
			break;
		case 6:
			clearMessage();
			break;
		case 7:
			nameSort();
			break;
		default:
			break;
		}
	}
	system("pause");
	return 0;
}
