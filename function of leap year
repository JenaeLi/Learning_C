#incude<stdio.h>
int Leap(int y)
{
	if(y%4 == 0&&y%100 != 0||y%400 ==0)
	{
		return 1;
	}
	return 0;
}
int main()
{
	int year = 0;
	printf("Please input year:\n");
	scanf("%d",&year);
	if(Leap(year))
	{
		printf("%d  is  Leap Year!\n",year);
	}
	else
	{
		printf("%d  is  not  Leap  Year!\n",year);
	}
	return 0;
}
