#include<stdio.h>
void init(int arr[10],int sz)
{
	int i = 0;
	for(i = 0;i < sz;i++)
	{
		arr[i] = i;
		printf("%d",arr[i]);
	}
	printf("\n");
}
void empty(int arr[10],int sz)
{
	int j = 0;
	for(j = 0;j < sz;j++)
	{
		arr[j] = 0;
		printf("%d",arr[j]);
	}
	printf("\n");
}
void reverse(int arr[10],int sz)
{
	int k = 0;
	for(k = sz-1;k >= 0;k--)
	{
		printf("%d",arr[k]);
	}
	printf("\n");
}
int main()
{
	int arr[10];
	int SZ = sizeof(arr)/sizeof(arr[0]);
	init(arr,SZ);
	empty(arr,SZ);
	reverse(arr,SZ);
	return 0;
}
