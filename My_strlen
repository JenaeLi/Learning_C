#include<stdio.h>
#include<assert.h>
#include<windows.h>


//one
int my_strlen(const char *str)
{
	int count = 0;
	while(*str++)
	{
		count++;
	}
	return count;
}

//two
int my_strlen(char * str)
{
	assert(str);
	char*end = str;
	while (*end != '\0')
	{
		end++;
	}
	return end-str;
}

//three
int my_strlen(char * str)
{
	if (*str == '\0')
	{
		return 0;
	}
	return 1+my_strlen(str+1);
}

int main()
{
	char str[] = "Day day up!";
	int ret = my_strlen(str);
	printf("ret = %d\n",ret);
	system("pause");
	return 0;
}
