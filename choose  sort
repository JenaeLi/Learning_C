#include<stdio.h>
#include<windows.h>
#include<assert.h>

void show(int *arr, int len)
{
	assert(arr);
	assert(len > 0);
	int i = 0;
	for (i = 0; i < len; i++)
	{
		printf("%d ", arr[i]);
	}
	printf("\n");
}
void swap(int *x, int *y)
{
	assert(*x);
	assert(*y);
	*x ^= *y;
	*y ^= *x;
	*x ^= *y;
}
void chooseSort(int *arr, int len)
{
	assert(arr);
	assert(len > 0);
	int i = 0;
	int j = 0;
	for (i = 0; i < len; i++)
	{
		for (j = i+1; j < len; j++)
		{
			if (arr[j] > arr[i])
			{
				swap(&arr[i], &arr[j]);
			}
		}
	}
}
int main()
{
	int arr[] = { 6, 325, 676, 968, 4, 7, 56, 86, 373, 437 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	show(arr, sz);
	chooseSort(arr, sz);
	show(arr, sz);
	system("pause");
	return 0;
}
