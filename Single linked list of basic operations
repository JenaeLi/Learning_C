	//{
	//	pDel = *ppHead;
	//	pList pPre = *ppHead;
	//	while (pDel)
	//	{
	//		if (pDel->data == data)
	//		{
	//			pPre->next = pDel->next;
	//			free(pDel);
	//			pDel = NULL;
	//			break;
	//		}
	//		pPre = pDel;
	//		pDel = pDel->next;
	//	}
	//}
}

void RemoveAll(ppList ppHead, DataType data)// 移除链表中所有值为data的结点
{
	assert(ppHead);
	if (NULL == *ppHead)
	{
		return;
	}
	pList pDel = (*ppHead)->next;
	pList pPre = *ppHead;
	while (pDel)
	{
		if (pDel->data == data)
		{
			pPre->next = pDel->next;
			free(pDel);
			pDel = pPre->next;
		}
		else
		{
			pPre = pDel;
			pDel = pDel->next;
		}
	}
	if ((*ppHead)->data == data)
	{
		*ppHead = (*ppHead)->next;
		free(pDel);
		pDel = NULL;
	}
}





#include "list.h"

void Function()
{
	pList pHead, pos;
	InitList(&pHead);
	PushBack(&pHead, 1);
	pos = FindList(pHead, 1);
	Insert(&pos, 5);
	Eraze(&pHead, pos);
	PushBack(&pHead, 2);
	PushBack(&pHead, 3);
	PushBack(&pHead, 4);
	pos = FindList(pHead, 4);
	Insert(&pos, 5);
	Eraze(&pHead, pos);
	PrintList(pHead);
	ReversePrint(pHead);
	PopBack(&pHead);
	PopBack(&pHead);
	PopBack(&pHead);
	PopBack(&pHead);
	PrintList(pHead);
	ReversePrint(pHead);
	PushFront(&pHead, 0);
	PushFront(&pHead, 7);
	PushFront(&pHead, 8);
	pos = FindList(pHead, 0);
	Eraze(&pHead, pos);
	PrintList(pHead);
	ReversePrint(pHead);
	PopFront(&pHead);
	PopFront(&pHead);
	PopFront(&pHead);
	pos = FindList(pHead, 2);
}

void Function1()
{
	pList pHead;
	InitList(&pHead);
	PushBack(&pHead, 1);
	PushBack(&pHead, 1); 
	PushBack(&pHead, 1);
	PushBack(&pHead, 2);
	PushBack(&pHead, 1);
	PushBack(&pHead, 3);
	PushBack(&pHead, 1);
	PushBack(&pHead, 4);
	PushBack(&pHead, 1);
	PrintList(pHead);
	//Remove(&pHead, 4);
	RemoveAll(&pHead, 1);
	PrintList(pHead);
}

int main()
