#include<stdio.h>
int main()
{
	int i = 0;
	int j = 0;
	int n = 0;
	int k = 0;
	int arr[100][100] = {0};
	printf("Please input n:\n");
	scanf("%d",&n);
	
	for(i = 0;i < n;i++)
	{
		arr[i][0] = 1;
		for(j = 0;j < i;j++)
		{
			if(j == 0)
			{
				printf(" %d ",arr[i][j]);
			}
			else
			{
				arr[i][j] = arr[i-1][j-1]+arr[i-1][j];
				printf(" %d ",arr[i][j]);
			}
		}
		printf("\n");
	}
	return 0;
}
